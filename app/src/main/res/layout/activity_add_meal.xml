<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#f0f4f8">

    <!-- Title or Total Due Amount Display -->
    <TextView
        android:id="@+id/dueAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Due: â‚¹0"
        android:textSize="22sp"
        android:textColor="#444444"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Button for Logging Breakfast -->
    <Button
        android:id="@+id/breakfastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Breakfast"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_background" />

    <!-- Button for Logging Lunch -->
    <Button
        android:id="@+id/lunchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Lunch"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_background" />

    <!-- Button for Logging Dinner -->
    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Dinner"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_background" />

    <!-- Button for Viewing Payment and Meal Summary -->
    <Button
        android:id="@+id/viewPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Payment and Meals"
        android:textSize="18sp"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_background" />
    <Button
        android:id="@+id/DetailPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:textSize="18sp"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/button_background" />

</LinearLayout>
